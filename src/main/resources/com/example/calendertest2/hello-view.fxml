                  <Image url="@img/downArrow.png" />
               </image>
            </ImageView>
            <Label fx:id="monthLabel" alignment="CENTER" prefHeight="100.0" prefWidth="153.0" text="Month">
               <font>
                  <Font name="SimSun" size="48.0" />
               </font>
            </Label>
            <Label fx:id="yearLabel" alignment="CENTER" prefHeight="100.0" prefWidth="153.0" text="Year">
             <font>
                 <Font name="SimSun" size="48.0" />
             </font>
