            <ImageView fx:id="upArrow" fitHeight="47.0" fitWidth="46.0" onMouseClicked="#decrementMonth" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/upArrow.png" />
               </image>
            </ImageView>
            <ImageView fx:id="downArrow" fitHeight="47.0" fitWidth="46.0" layoutX="10.0" layoutY="37.0" onMouseClicked="#incrementMonth" pickOnBounds="true" preserveRatio="true">
